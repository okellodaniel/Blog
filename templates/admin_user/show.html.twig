{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <style>
        a{
            text-decoration: none;
            font-weight: normal;
            color: black;
        }

        a:hover{
            color:white;
        }
    </style>
    <h1>Edit {{ user.Names }} </h1>

    <table class="table">
        <tbody>
            <tr scope="col">
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr scope="col">
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr scope="col">
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr scope="col">
                <th>Names</th>
                <td>{{ user.Names }}</td>
            </tr>
            <tr scope="col">
                <th>Email</th>
                <td>{{ user.Email }}</td>
            </tr>
        </tbody>
    </table>

    <button class="btn btn-outline-danger"><a href="{{ path('app_admin_user_index') }}">Return to list</a></button>

    <button class="btn btn-outline-success"><a href="{{ path('app_admin_user_edit', {'id': user.id}) }}">Edit</a></button>

    {{ include('admin_user/_delete_form.html.twig') }}
{% endblock %}
